/* 1.1  Sub-name */

:local(.sensor-paper)
  display inline-block
  margin 20px
  padding-bottom 1em
  width 200px
  //height 200px
  text-align center
  box-sizing border-box
  @media screen and (max-width: 480px)
    width 180px
  @media screen and (max-width: 440px)
    width 170px
  @media screen and (max-width: 420px)
    width 160px

:local(.sensor-paper-title)
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

:local(.sensor-add-btn)
  position fixed
  bottom 20px
  right 20px
  z-index 999

:local(.sensor-upload-btn)
  position fixed
  bottom 20px
  right 100px
  z-index 999

:local(.sensor-download-btn)
  position fixed
  bottom 20px
  right 180px
  z-index 999

:local(.sensor-add-content)
  display flex
  @media screen and (max-width: 700px)
    flex-direction column
    align-items center
:local(.sensor-img-container)
  display flex
  align-items center
  justify-content center
  max-width 100%
  height 150px

:local(.sensor-img)
  max-width 100%
  max-height 100%

:local(.sensor-dropzone-cover)
  width 200px !important
  height 200px !important
  > path
    fill #ccc

:local(.sensor-dropzone-preview)
  max-width 200px
  max-height 200px

:local(.sensor-dropzone)
  display flex
  justify-content center
  align-items center
  width 200px
  height 200px