{
  "apps" : [
    {
      "name": "SYSTEMCT",
      "script": "server.js",
      "exec_mode": "cluster",
      "instances": "-1",
      "merge_logs": true,
      "error_file": "./logs/pm2_error.log",
      "out_file": "./logs/pm2_out.log",
      "pid_file": "./logs/pm2_id.pid",
      "max_memory_restart": "1G",
      "autorestart": true,
      "node_args": ["--harmony-async-await"],
      "watch": true,
      "ignore_watch" : ["node_modules", "files", "uploads", "coverage"],
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production" : {
        "NODE_ENV": "production",
        "NODE_PORT": 3000
      }
    }
  ],

  "deploy" : {
    "production" : {
      "user" : "root",
      "host" : [
        {
          "host": "188.225.32.111",
          "port": "22"
        }
      ],
      "key": "/root/.ssh/id_rsa.pub",
      "ref"  : "origin/master",
      "repo" : "git@github.com:koalex/systemct.git",
      "path" : "/root/systemct",
      "post-deploy" : ". ~/.nvm/nvm.sh && . ~/.profile && . ~/.bashrc && nvm use 7* && yarn install --ignore-engines && webpack --json --profile >stats.json && pm2 startOrReload ecosystem.json --env production && pm2 save"
    }
  }
}
