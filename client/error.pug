html
   head
      meta(charset="utf-8")
      if favicons
         each val, index in favicons.html
            !=val
      link(href="http://fonts.googleapis.com/css?family=Love+Ya+Like+A+Sister" rel="stylesheet" type="text/css")
      title #{status} | #{message}
      style
         | html { overflow: hidden; font-family: 'Love Ya Like A Sister', Arial, 'sans-serif'; }
         | body { margin: 0; padding: 1px; background-color: #eaeaea; box-shadow: inset 0 0 100px rgba(0,0,0,.5); }
         | h1 { margin: 40px 0 0 0; color: #9eb92e; font-size: 200px; text-align: center; text-shadow: 5px 5px 10px rgba(0,0,0,.5); }
         | p { margin-top: 40px; color: #272727; font-size: 36px; text-align: center; }
         | h1 > span:nth-child(1) { position: relative; left: 15px; z-index: 3; }
         | h1 > span:nth-child(2) { position: relative; color: #2b2b2b; z-index: 2; }
         | h1 > span:nth-child(3) { position: relative; left: -15px; z-index: 1; }
         | a { display: inline-block; margin: 0 auto; padding: 7px 12px; font-size: 20px; color: #fff; background-color: #2b2b2b; text-decoration: none; cursor: pointer; border-radius: 4px; }
         | a:hover { text-shadow: 0 0 10px rgba(255,255,255,.9); }

   body
      p #{message}
      - var _status = String(status).length == 3 ? String(status).split('') : status
      if Array.isArray(_status)
         h1
            each val in _status
               span= val
      else
         h1 #{status}

      div(style="text-align: center")
         a(href="/") #{GO_2_HOME_PAGE} &rarr;
