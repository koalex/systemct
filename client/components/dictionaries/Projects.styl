/* 1.1  Sub-name */

:local(.projects-container)
  display flex
  flex-grow 1
  font-family Helvetica, Arial, sans-serif
  overflow hidden

:local(.projects-project-devices)
  flex-grow 99999
  overflow-x hidden
  color rgba(0, 0, 0, 0.54)

:local(.projects-project-devices__title)
  flex-grow 1
  height 48px
  line-height 48px
  color rgba(0, 0, 0, 0.54)
  text-align center

:local(.projects-delim)
  border-left 1px solid #ccc

:local(.projects-project-devices-list-item)
  img + *
    overflow hidden
    text-overflow ellipsis

:local(.projects-devices-detail)
  position relative
  display flex
  flex-wrap wrap
  align-content flex-start
  flex-grow 1
  flex-shrink 99
  overflow-y hidden
  //> div
  //  overflow-y auto !important
  //  overflow-x hidden !important

:local(.ip-address-dot-delim)
  font-size 48px
  line-height 0
  vertical-align middle

:local(.ip-address-port-delim)
  font-size 48px
  line-height 0
  vertical-align middle

:local(.ip-address-part)
  padding-left 8px
  width 48px !important
  height 48px !important
  border-width 2px
  border-style solid
  box-sizing border-box

:local(.ip-address-port)
  width 68px !important
